<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="127dp"
            android:layout_height="154dp"
            android:id="@+id/number_count"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="153dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="424dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="151dp"
            android:layout_marginRight="151dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="329dp"
            android:layout_height="73dp"
            android:id="@+id/txt_start"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="129dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="529dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="51dp" android:layout_marginStart="51dp" android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="322dp"
            android:layout_height="158dp"
            android:id="@+id/txt_q"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="202dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="371dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="51dp" android:layout_marginStart="51dp" android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Tequila - Dan+Shay"
            android:layout_width="201dp"
            android:layout_height="121dp"
            android:id="@+id/btn_choice_1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="401dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="209dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="7dp" android:layout_marginStart="7dp" android:layout_marginEnd="203dp"
            android:layout_marginRight="203dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Lucky - Daft Punk"
            android:layout_width="201dp"
            android:layout_height="121dp"
            android:id="@+id/btn_choice_3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="522dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="7dp" android:layout_marginStart="7dp" android:layout_marginEnd="203dp"
            android:layout_marginRight="203dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Look Alive - Drake"
            android:layout_width="201dp"
            android:layout_height="121dp"
            android:id="@+id/btn_choice_4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="522dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="208dp" android:layout_marginStart="208dp" android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Homegrown - Zac Brown Band"
            android:layout_width="201dp"
            android:layout_height="121dp"
            android:id="@+id/btn_choice_2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="401dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="209dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="208dp" android:layout_marginStart="208dp" android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp" app:layout_constraintEnd_toEndOf="parent"/>


    <com.github.glomadrian.grav.GravView
            android:id="@+id/grav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:colorGenerator="com.github.glomadrian.grav.generator.paint.ArrayColorGenerator"
            app:array_colors="@array/bubble"
            app:pointGenerator="com.github.glomadrian.grav.generator.point.RegularPointGenerator"
            app:regular_cell_size="300"
            app:regular_variance="200"
            app:gravGenerator="com.github.glomadrian.grav.generator.grav.BallGenerator"
            app:ball_from_size="10dp"
            app:ball_to_size="20dp"
            app:animationGenerators="@array/BubbleAnimations"
            app:side_to_side_min_duration="10000"
            app:side_to_side_max_duration="10000"
            app:side_to_side_direction="leftToRight"
            app:shake_direction="vertical"
            app:shake_min_duration="10000"
            app:shake_max_duration="20000"
            app:shake_variance="500dp"
    />
    <TextView
            android:text="Round 1/5"
            android:layout_width="170dp"
            android:layout_height="71dp"
            android:id="@+id/txt_round" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="62dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="598dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="241dp" android:layout_marginRight="241dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:textColor="@color/black"/>
    <TextView
            android:text="Score:"
            android:layout_width="170dp"
            android:layout_height="71dp"
            android:id="@+id/txt_score" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="62dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="598dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="239dp" android:layout_marginStart="239dp" android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp" app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:textColor="@color/black"/>

</android.support.constraint.ConstraintLayout>