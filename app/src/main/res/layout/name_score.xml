<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <TextView
            android:id="@+id/name"
            android:layout_width="241dp"
            android:layout_height="43dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/winperc"
            android:layout_marginEnd="88dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="18sp" android:layout_marginRight="88dp" app:layout_constraintVertical_bias="0.0"
            android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/winperc"
            android:layout_width="154dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="14sp"
            android:layout_marginBottom="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="58dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" app:layout_constraintVertical_bias="0.009"
            android:textColor="@android:color/white"/>
    <TextView
            android:id="@+id/score"
            android:layout_width="156dp"
            android:layout_height="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="14sp"
            android:layout_marginBottom="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="58dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="236dp"
            android:layout_marginStart="236dp" app:layout_constraintVertical_bias="0.0"
            android:textColor="@android:color/white"/>


</android.support.constraint.ConstraintLayout>